<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#0099CC" />
      <!-- to be deleted      -->
      <stroke
          android:width="1dp"
          android:color="#54bbe0" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
         <!-- NOT PRESSED  -->
      <gradient
          android:startColor="#35B5E5"
          android:endColor="#0099CC"
          android:angle="270" />
      <!-- to be deleted if no stroke is used -->
      <stroke
          android:width="0dp"
          android:color="#00baff" />
      <corners
          android:radius="3dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
      
    </shape>
  </item>
</selector>